<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.activities.SignInActivity">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="350dp"
            android:layout_height="670dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="Бонч Мессенджер"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:textSize="25sp"
                android:layout_marginTop="8dp" android:layout_marginBottom="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Почта"
                android:id="@+id/email_sign_in_edit_text"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <EditText

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Пароль"
                android:id="@+id/password_sign_in_edit_text" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
        />
        <Button
                android:text="Войти"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_in_button" android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="Зарегистрироваться"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up_button" android:layout_marginBottom="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
